###############################################################################
##########         build gtk and friends                          #############
###############################################################################

# well I guess on windows it's easier to just download the binaries and dev
# packages (in case we need them for later)


# Building of the gtk2 dependencies depend on pkg-config.  
# configure: error: *** pkg-config too old; version 0.16 or better required.
# Get a recent pkg-config here:
# http://pkgconfig.freedesktop.org/releases/pkg-config-0.23.tar.gz


# gtk2 build says that pango depends on cairo:
# checking Pango flags... configure: error:
# *** Pango not found. Pango built with Cairo support is required
# *** to build GTK+. See http://www.pango.org for Pango information.
# 
# so, if we build cairo, we must build pango too


# just to make sure we download in sources
cd ${AUTOBUILD_SOURCES}

if test -n "$build_gtk" ; then 
   echo BUILDING Gtk+-2 and dependencies...
   (
   if [ "$build_atk" = 1 ] ; then 
      echo  ======================================================
      echo BUILDING atk binaries
      echo  ======================================================
      atk_version=1.20.0
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/atk/1.20/atk-$atk_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/atk/1.20/atk-dev-$atk_version.zip
      date
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/atk-$atk_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/atk-dev-$atk_version.zip
      cd -
   else
      echo not BUILDING atk
   fi


# dont think we really need glitz!?
 
   if [ "$build_glib" = 1 ] ; then
      echo  ======================================================
      echo BUILDING glib binaries and dev
      echo  ======================================================
      glib_version=2.14.6-2
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/glib/2.14/glib-$glib_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/glib/2.14/glib-dev-$glib_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/glib-$glib_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/glib-dev-$glib_version.zip
      cd -
      glib_status=0
   else 
      echo not BUILDING glib
   fi

   # cairo(?) dependends on freetype2 (RedHat 8 doesn't have it)
   if [ "$build_freetype2" = 1 ] ; then
      echo  ======================================================
      echo BUILDING freetype2
      echo  ======================================================
      freetype2_version=2.3.4
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/freetype-$freetype2_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/freetype-dev-$freetype2_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/freetype-$freetype2_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/freetype-dev-$freetype2_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/freetype-$freetype2_version.zip
      # 7z x -y ${AUTOBUILD_SOURCES}/freetype-dev-$freetype2_version.zip
      cd -
   else 
      echo NOT BUILDING freetype2
   fi

   # cairo(?) dependends on fontconfig (include file?) to define `FC_RGBA_UNKNOWN'
   # fontconfig depends on Freetype2 (what fun).
   if [ "$build_fontconfig" = 1 ] ; then
      echo  ======================================================
      echo BUILDING fontconfig and expat
      echo  ======================================================
      fontconfig_version=2.4.2-tml-20071015
      # we need libexpat for fontconfig
      expat_version=2.0.0
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/fontconfig-$fontconfig_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/fontconfig-dev-$fontconfig_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/expat-$expat_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/fontconfig-$fontconfig_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/fontconfig-dev-$fontconfig_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/expat-$expat_version.zip
      cd -
   else
      echo NOT BUILDING fontconfig
   fi

   if [ "$build_cairo" = 1 ] ; then
      echo  ======================================================
      echo  BUILDING cairo
      echo  ======================================================
      cairo_version=1.4.14
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/cairo-$cairo_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/cairo-dev-$cairo_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/cairo-$cairo_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/cairo-dev-$cairo_version.zip
      cd -
   else
      echo NOT BUILDING cairo
   fi
 
   if [ "$build_pango" = 1 ] ; then
      echo  ======================================================
      echo  BUILDING pango
      echo  ======================================================
      pango_version=1.18.4
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/pango/1.18/pango-$pango_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/pango/1.18/pango-dev-$pango_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/pango-$pango_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/pango-dev-$pango_version.zip
      cd - 
      pango_status=0
   else
      echo NOT BUILDING pango
   fi

   # librsvg depends on libpng and lib-xml-2, so we shall get these
   if [ "$pango_status" = 0 ] ; then
      echo  ======================================================
      echo  BUILDING libpng, libtiff, and libjpeg
      echo  ======================================================
      libpng_version=1.2.8
      libjpeg_version=6b-4
      libtiff_version=3.8.2-1
      zlib_version=1.2.3
      ${WGET} http://downloads.sourceforge.net/gnuwin32/libpng-$libpng_version-bin.zip
      ${WGET} http://downloads.sourceforge.net/gnuwin32/jpeg-$libjpeg_version-bin.zip
      ${WGET} http://downloads.sourceforge.net/gnuwin32/tiff-$libtiff_version-bin.zip
      ${WGET} http://downloads.sourceforge.net/gnuwin32/zlib-$zlib_version-bin.zip
      ${WGET} http://downloads.sourceforge.net/gnuwin32/zlib-$zlib_version-lib.zip
      cd $install_top_dir
      # ${WGET} http://downloads.sourceforge.net/gnuwin32/libpng-$libpng_version-lib.zip
      7z x -y ${AUTOBUILD_SOURCES}/libpng-$libpng_version-bin.zip
      7z x -y ${AUTOBUILD_SOURCES}/jpeg-$libjpeg_version-bin.zip
      7z x -y ${AUTOBUILD_SOURCES}/tiff-$libtiff_version-bin.zip
      7z x -y ${AUTOBUILD_SOURCES}/zlib-$zlib_version-bin.zip
      7z x -y ${AUTOBUILD_SOURCES}/zlib-$zlib_version-lib.zip
      cd -
   else
       echo NOT BUILDING libpng
   fi

   if [ "$pango_status" = 0 ] ; then
      echo  ======================================================
      echo  BUILDING libxml2
      echo  ======================================================
      libxml2_version=2.4.12
      ${WGET} http://downloads.sourceforge.net/gnuwin32/libxml2-$libxml2_version-bin.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/libxml2-$libxml2_version-bin.zip
      # now we need to make a pkg-config file
      echo 'prefix=/target' > ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'exec_prefix=${prefix}' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'libdir=${exec_prefix}/lib' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'includedir=${prefix}/include' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo '' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo '' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'Name: libXML' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'Version: '$libxml2_version >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'Description: libXML library version2.' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'Libs: -L${libdir} -lxml2 -lz' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      echo 'Cflags: -I${includedir}/libxml2 ' >> ${AUTOBUILD_INSTALLED}/lib/pkgconfig/libxml-2.0.pc
      cd -
   else
       echo NOT BUILDING libxml2
   fi
   

   # and we need libiconv
   if [ "$glib_status" = 0 ] ; then
      echo  ======================================================
      echo  BUILDING libiconv
      echo  ======================================================
      libiconv_version=1.9.1
      ${WGET} http://www.gimp.org/~tml/gimp/win32/libiconv-$libiconv_version.bin.woe32.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/libiconv-$libiconv_version.bin.woe32.zip
      cd -
   else
       echo NOT BUILDING libiconv
   fi



   # cairo depends dependends on librsvg (for testing) otherwise warning.
   # But.  librsvg depends on pango (the pangoft2 part).  This is crazy.
   # But.  cairo depend on librsvg (doesn't it?)
   # Does cairo depend on pango? Yes.
   if [ "$pango_status" = 0 ] ; then
      echo  ======================================================
      echo  BUILDING librsvg and its extras, croco, gsf, bzip2
      echo  ======================================================
      librsvg_version=2.16.1
      ${WGET} http://ftp.gnome.org/pub/GNOME/binaries/win32/librsvg/2.16/librsvg-$librsvg_version.zip
      # ${WGET} http://ftp.gnome.org/pub/GNOME/binaries/win32/librsvg/2.16/librsvg-dev-$librsvg_version.zip
      ${WGET} http://ftp.gnome.org/pub/GNOME/binaries/win32/librsvg/2.16/svg-gdk-pixbuf-loader-$librsvg_version.zip
      ${WGET} http://ftp.gnome.org/pub/GNOME/binaries/win32/librsvg/2.16/svg-gtk-engine-$librsvg_version.zip
      # and we need croco, gsf and bzip for librsvg to run properly
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/libcroco/0.6/libcroco-0.6.1.zip 
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/libgsf/1.14/libgsf-1.14.4.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/libbzip2-1.0.2.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/librsvg-$librsvg_version.zip
      # 7z x ${AUTOBUILD_SOURCES}/librsvg-dev-$librsvg_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/svg-gdk-pixbuf-loader-$librsvg_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/svg-gtk-engine-$librsvg_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/libcroco-0.6.1.zip
      7z x -y ${AUTOBUILD_SOURCES}/libgsf-1.14.4.zip
      7z x -y ${AUTOBUILD_SOURCES}/libbzip2-1.0.2.zip
      cd -
      # we shall run gdk-pixbuf-query loader
      # but after we have gtk+!!!
   else
      echo NOT BUILDING librsvg
   fi

   if [ "$build_gtk" = 1 ] ; then
      echo  ======================================================
      echo  BUILDING gtk+2
      echo  ======================================================
      gtk2_version=2.12.8
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/gtk+/2.12/gtk+-$gtk2_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/gtk+/2.12/gtk+-dev-$gtk2_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/gtk+-$gtk2_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/gtk+-dev-$gtk2_version.zip
      cd - 
   else
      echo NOT BUILDING gtk2
   fi
   if test -n "$gtk_set_failure" ; then 
      exit 1
   fi

   if [ "$build_gettext" = 1 ] ; then
      echo  ======================================================
      echo  BUILDING gettext
      echo  ======================================================
      gettext_version=0.17-1
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/gettext-runtime-$gettext_version.zip
      ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/gettext-runtime-dev-$gettext_version.zip
      cd $install_top_dir
      7z x -y ${AUTOBUILD_SOURCES}/gettext-runtime-$gettext_version.zip
      7z x -y ${AUTOBUILD_SOURCES}/gettext-runtime-dev-$gettext_version.zip
      cd -
   else
      echo NOT BUILDING gettext
   fi
   # run query loader to be able to load svg icons properly
   cp $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders.orig
   gdk-pixbuf-query-loaders > $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders
   # now we have absolute paths in the file, let's make them relative
   # to avoid running the gdk-pixbuf.loaders during install
   sed -e "s|C:\/msys$install_top_dir|..|" \
     $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders > tmp.loaders
   mv $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders.bak
   mv tmp.loaders $install_top_dir/etc/gtk-2.0/gdk-pixbuf.loaders

   ) > $HOSTLOGDIR/06-gtk-prerequisites.txt 2>&1
   if test "$?" != 0 ; then
      echo gtk set failed somewhere
   fi

fi


cd $build_dir
if test -n "$build_gtkglext" ; then
    echo BUILDING gtkglext:
    gtkglext_version=1.2.0
    ${WGET} http://surfnet.dl.sourceforge.net/sourceforge/gtkglext/gtkglext-$gtkglext_version.tar.gz
    ${WGET} http://www.ysbl.york.ac.uk/~lohkamp/software/extras/gtkglext_configure.patch
    (date
     pwd
     gzip -dc ${AUTOBUILD_SOURCES}/gtkglext-$gtkglext_version.tar.gz | tar xf -
     cd gtkglext-$gtkglext_version
     patch -p0 < ${AUTOBUILD_SOURCES}/gtkglext_configure.patch
     ./configure --build=i386-pc-mingw32 $generic_prefix
     $MAKE
    status=$?
    if [ "$status" != 0 ] ; then
       echo make of gtkglext failed
    else
       $MAKE install
    fi
    cd -
    ) > $HOSTLOGDIR/08-pre-gtkglext.txt 2>&1
else
    echo not building gtkglext:
fi 
echo done with Gtk+-2 and dependencies...


cd ${AUTOBUILD_SOURCES}
## libgnomecanvas
