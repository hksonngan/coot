   echo BUILDING pkg-config:
   #
   pkg_config_version=0.23-2
   ${WGET} http://ftp.gnome.org/pub/gnome/binaries/win32/dependencies/pkg-config-$pkg_config_version.zip
   (
   date
   cd $install_top_dir
   7z x -y ${AUTOBUILD_SOURCES}/pkg-config-$pkg_config_version.zip
